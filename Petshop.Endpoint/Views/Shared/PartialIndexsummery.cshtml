@model Product

<li>
    <a href="#">
      
        <img src="@Model.Imagee.Img" width="114" height="160" alt="">
    </a>
    <h2>@Model.Description</h2>
    <h6>@Model.Price.ToString("c")</h6>
    <form asp-controller="Basket" asp-action="AddToBasket" method="post">
        <input type="hidden" value="@Model.Id" name="productId"/>
        <input type="hidden" value="@ViewContext.HttpContext.Request.Path" name="returnUrl" />
        <input class="btn btn-warning" type="submit" value="اضافه به سبد خرید" />
    </form>
    <p> @Model.Name</p>
</li>
        